{
  "name": "CustomFileExplorer",
  "version": "1.0.0",
  "description": "An Electron app with a React-based UI for file explorer monitoring",
  "main": "main.js",
  "scripts": {
    "start": "npx npm-run-all --parallel start:electron start:webpack",
    "start:electron": "wait-on dist/index.html && electron .",
    "start:webpack": "webpack --watch --mode development",
    "build": "webpack --mode production"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "electron": "^22.0.0",
    "node-fetch": "^2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "babel-loader": "^8.2.2",
    "html-webpack-plugin": "^5.6.3",
    "npm-run-all": "^4.1.5",
    "wait-on": "^6.0.0",
    "webpack": "^5.58.1",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  }
}
